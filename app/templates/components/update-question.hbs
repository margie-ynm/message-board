{{#if updateQuestionForm}}
  <h4>Update {{question.inquiry}}</h4>
  <div>
    <form>


      <div class="form-group">
        <label for="note">Notes:</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>

      <div class="form-group">
        <label for="author">Asked by:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="inquiry">Inquiry:</label>
        {{input value=inquiry id="inquiry" placeholder=question.inquiry}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update</button>
{{/if}}
