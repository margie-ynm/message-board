{{#if updateQuestionForm}}
  <h4>Update:</h4>
  <div>
    <form>

      <div class="form-group">
        <label for="inquiry">Question:</label>
        {{input value=inquiry id="inquiry" placeholder=question.inquiry}}
      </div>

      <div class="form-group">
        <label for="note">Notes:</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>

      <div class="form-group">
        <label for="author">Author:</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <button class="btn btn-success" {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <br>
  <button class="btn btn-info"{{action 'updateQuestionForm'}}>Update</button>
{{/if}}
