{{#if addNewQuestion}}
<h3>New Question</h3>
<br>
<div>
  <form>
    <div class="form-group">
      <label for="inquiry">Question:</label>
      {{input value=inquiry id="inquiry"}}
    </div>

    <div class="form-group">
      <label for="note">Note:</label>
      {{input value=note id="note"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <button class="btn btn-success" {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-primary" {{action 'questionFormShow'}}>Add question</button>
{{/if}}
