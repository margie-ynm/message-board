{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="inquiry">Inquiry:</label>
      {{input value=inquiry id="inquiry"}}
    </div>

    <div class="form-group">
      <label for="note">Note:</label>
      {{input value=note id="note"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <button {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>Add question</button>
{{/if}}
