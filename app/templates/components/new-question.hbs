{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="question">Question:</label>
      {{input value=question id="question"}}
    </div>

    <div class="form-group">
      <label for="notes">Notes:</label>
      {{input value=notes id="notes"}}
    </div>

    <div class="form-group">
      <label for="author">Author:</label>
      {{input value=author id="author"}}
    </div>

    <button {{action 'saveQuestion1'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>Add question</button>
{{/if}}
